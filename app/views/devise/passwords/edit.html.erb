<div class="bg-container log_in">
  <div class="block block-500 bg-white text-center p-5 rounded">

    <h2 class="h3">Changez de mot de passe</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field mb-5">
        <%= f.label :password, "Nouveau mot de passe" %><br />
        <% if @minimum_password_length %>
          <small>(<%= @minimum_password_length %> charact√®res minimum)</small><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="field mb-5">
        <%= f.label :password_confirmation, "Confirmez votre nouveau mot de passe" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Changer mon mot de passe", class: "btn btn-primary btn-lg mb-3" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
<div class="bg-container bg-indigo1">
  <div class="block block-800 bg-white p-4 p-md-5 rounded text-center">

    <header class="p-4 text-center">
      <h2> <i class="fas fa-clipboard mr-2"> </i>Ma liste de course</h2>
      <p class="intro mb-3 mb-md-4">Voici la liste de course pour ton menu.</p>
    </header>

    <table class="table">
      <% i = 1 %>
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Ingrédient</th>
          <th scope="col">Quantité</th>
        </tr>
      </thead>
      <tbody>
        <%@id_sum_hash.each do |key, value|%>
          <tr>
            <th scope="row"><%= i %></th>
            <td><%=key%></td>
            <td>
              <%value.each do |value|%>
                <%=value[1]%>
              <%end%>
            </td>
            <% i += 1 %>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div>
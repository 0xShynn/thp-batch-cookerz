<div class="bg-container" id="index-recipes">

  <%= render 'admin/header' %>
  
  <div class="block block-1000 bg-white p-3 p-md-5 rounded-bottom"> 
    <h4 class="h3 text-center mb-3 mb-md-4">Les recettes</h4>
    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Recette</th>
            <th scope="col">Publi√© ?</th>
            <th scope="col">Edition</th>
            <th scope="col">Suppression</th>
          </tr>
        </thead>
        <tbody>
         <% @recipes.each do |recipe|%>
          <tr>
            <th scope="row"><%= recipe.id %></th>
            <td><%= recipe.name %></td>
            <td><%= link_to "#{recipe.is_displayed}", admin_recipe_path(recipe), method: :put %></td>
            <td><%= link_to "Editer", edit_admin_recipe_path(recipe) %></td>
            <td><%= link_to "Supprimer", admin_recipe_path(recipe), method: :delete %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
  
<div class="bg-container" id="index-recipes">

  <div class="block block-1000 bg-indigo1 p-4 p-md-5 rounded-top text-center">
    <h2 class="text-white">Les utilisateurs</h2>
    <h4 class='text-white'>Il y a <%= @users.count %> utilisateurs enregistrés sur le site.
    </h4>
  </div>

  <div class="block block-1000 bg-white rounded-bottom"> 
    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Prénom</th>
            <th scope="col">Nom</th>
            <th scope="col">Surnom</th>
            <th scope="col">Editer les infos générales</th>
            <th scope="col">Supprimer</th>
          </tr>
        </thead>
        <tbody>
         <% @users.each do |user|%>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.nickname %></td>
            <td><%= link_to "Editer le profil", edit_admin_user_path(user) %></td>
            <td><%= link_to "Supprimer le profil", admin_user_path(user), method: :delete %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
  
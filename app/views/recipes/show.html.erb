<div class="bg-container" id="show-recipes">

<div class="block block-800 bg-white rounded-top text-center"">

<h2> Voici la recette : <%= @recipe.name%> </h2>

<p>
	<%= @recipe.cost%><br>
	<%= @recipe.description%><br>
	<%= @recipe.preparation_time%><br>
	<%= @recipe.cooking_time%> 
</p>

<p>

	<% @comments.each do |comment|%>
	<p><%=comment.description%>
	<%=comment.user.nickname%></p>
	<%end%>
</p>

<% if user_signed_in?%>
  <p>
    <%= form_with model: @comment, url:recipe_comments_path(@recipe.id) do |form| %>
    <%= form.text_field :description%>
    <%= form.submit class: "btn btn-secondary"%>
    <% end%>
  </p>

  <p>
    <% pre_like = @recipe.likes.find { |like| like.user_id == current_user.id} %>
    <% if pre_like %>
      <%= button_to 'Unlike', recipe_like_path(@recipe, pre_like), method: :delete %>
    <% else %>
      <%= button_to 'Like', recipe_likes_path(@recipe), method: :post %>
    <% end %>
  </p>
<% end %>

<p><%= @recipe.likes.count %> <%= (@recipe.likes.count) == 1 ? 'Like' : 'Likes'%></p>

<p> <%= link_to "Voir les autres recettes", recipes_path(@recipes) %>


</div>

</div>

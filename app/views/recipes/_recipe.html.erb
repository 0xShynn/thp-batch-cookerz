<div class="row">

  <div class="col-sm-4 d-flex align-items-center">
    <%= link_to recipe_path(recipe), class: "img-fluid rounded" do %>
      <img class="img-fluid rounded" src="https://cdn-image.foodandwine.com/sites/default/files/1483039291/chickpeas-and-kale-in-spicy-pomodoro-sauce-XL-RECIPE0217.jpg" alt="Card image cap">
    <% end %>
  </div>

  <div class="col-sm-8">
    <div class="recipe-info py-3">  
      <%= link_to recipe_path(recipe), class: "title h4 mr-2" do %>
        <%= recipe.name %>
      <% end %> 
      <span class="h5"> <i class="fas fa-seedling text-vegan"></i> <i class="fas fa-drumstick-bite text-omnivore"></i> <i class="fas fa-cheese text-vegetarian"></i> </span>
      <div class="the-icons my-2 text-grey1 h6 font-weight-normal">
        <span class="mr-4">
          <i class="far fa-clock mr-1"></i> <%=recipe.cooking_time%> mn
        </span>
        <span class="mr-4">
          <i class="fas fa-tag mr-1"></i> <%recipe.price_indicator.times do %>€
        <%end%>
        </span>
        <span class="mr-4"> 
          <% if user_signed_in?%>
              <% pre_like = recipe.likes.find { |like| like.user_id == current_user.id} %>
                <% if pre_like %>
                  <%= link_to recipe_like_path(recipe, pre_like), method: :delete do %>
                  <i class="fas fa-heart mr-1"></i>
                <% end %>
                <% else %>
                    <%= link_to recipe_likes_path(recipe), method: :post do %>
                    <i class="far fa-heart mr-1"></i>
                  <% end %>
                <% end %>
              <%= recipe.likes.count %> <%= (recipe.likes.count) == 1 ? '' : ''%>
            <% else %>
              <i class="far fa-heart mr-1"></i> <%= recipe.likes.count %>
            <% end %>
        </span>
      </div>
      <p class="description"><%=recipe.description%></p>
      <%=link_to "Voir la recette", recipe_path(recipe), class:"recipe-link btn btn-outline-primary px-3" %>
      <%if user_signed_in?%>
      <div class="d-inline-block">
        <%= button_to "Ajouter à mon menu", menu_recipes_path(menu_id: Menu.where(user_id: current_user.id).last.id, recipe_id: recipe.id), class:"recipe-link btn btn-outline-secondary px-3", method: "post" %>
      </div>
      <% end%>
    </div>
  </div>

</div>

<hr class="my-4">
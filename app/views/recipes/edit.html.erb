<div class="bg-container" id="contact">
  <div class="block block-800 p-4 p-md-5 bg-white rounded">
    <header class="block block-800 p-4 p-md-5 text-center">
      <h2>Editer la recette n° <%= @recipe.id %></h2>
      <p class="intro">Après plusieurs essais, vous voulez améliorer la recette ? C'est l'endroit ! </p>
    </header>


    <%= form_for @recipe do |f| %>
      <div class="form-group mb-4">
        <label>Nom de la recette</label>
         <%= f.text_field :name %>

        <label>Catégorie <small>(régime alimentaire)</small></label>
          <%= f.select :recipe_category_id do %>
              <% @recipe_categories.each do |category| -%>
                <%= content_tag(:option, category.first, value: category.last) %>
              <% end %>
            <% end %>

        <label>Catégorie <small>(Sélectionner une tranche de prix)</small></label>
          <%= f.select :price_indicator do %>
            <% @price_indicators.each do |price| -%>
              <%= content_tag(:option, price.first, value: price.last) %>
            <% end %>
          <% end %>
          
        <label>Desicription <small>(Sélectionner une tranche de prix)</small></label>
        <%= f.text_area :description %>
        
        <label>Temps de préparation <small>(en minutes)</small></label>
        <%= f.number_field :preparation_time %>

        <label>Temps de cuisson <small>(en minutes)</small></label>
        <%= f.number_field :cooking_time %>

        <%= f.submit "Modifier la recette" %>
    <% end %>
      
  </div>
</div>


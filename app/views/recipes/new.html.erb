<h2>Proposer une nouvelle recette<h2>
<%= form_with model: @recipe, method: 'CREATE' do |form| %>
  <%= form.text_field :name, placeholder: "Nom" %> <br />
  <%= form.collection_select :recipe_category, RecipeCategory.order(:name),:id,:name, include_blank: true %><br />
  <%= form.text_field :description, placeholder: "Description" %> <br />
  <%= form.number_field :preparation_time, placeholder: "Temps de préparation" %> <br />
  <%= form.number_field :cooking_time, placeholder: "Temps de cuisson" %> <br />
  <%= form.select :price_indicator, options_for_select([['€',1],['€€',2],['€€€',3],['€€€€',4],['€€€€€',5]])%>

  
  <%for ingredient in Ingredient.all%>
      <%=form.check_box :ingredient, {multiple: true}, ingredient.id%> <%=ingredient.name%><br/>
  <%end%>
  <%= form.submit "Proposer la recette" %>
<% end %>

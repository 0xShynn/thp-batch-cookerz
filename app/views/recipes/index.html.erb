<div class="form-container" id="index-recipes">
  <div class="block-800 p-5 bg-indigo1 rounded-top text-center">
    <h2 class="text-white">Les recettes</h2>
  </div>
  <div class="block-800 p-5 bg-white rounded-bottom"> 
    <div class="row">
      <div class="col-sm-12">
        <%@recipes.each do |recipe|%>
          <div class="row">
            <div class="col-sm-4">
              <img class="img-fluid mh-100 rounded" src="https://cdn-image.foodandwine.com/sites/default/files/1483039291/chickpeas-and-kale-in-spicy-pomodoro-sauce-XL-RECIPE0217.jpg" alt="Card image cap">
            </div>
            <div class="col-sm-8">
              <div class="recipe-info py-3">
                <h3 class="title text-indigo-dark3"><%=recipe.name%></h3>
                <p class="description"><%=recipe.description%></p>
                <div class="the-icons my-3 text-muted h6">
                  <span class="mr-3">
                    <i class="fas fa-stopwatch mr-2"></i><%=recipe.cooking_time%> mn
                  </span>
                  <span class="mr-3">
                    <i class="fas fa-money-bill mr-2"></i> <%= recipe.cost%> €
                  </span>
                  <span class="mr-3">
                    <i class="fas fa-thumbs-up mr-2"></i> <%= recipe.likes.count %>
                  <!-- <%= recipe.likes.count %> <%= (recipe.likes.count) == 1 ? 'Like' : 'Likes'%> -->
                  </span>
                </div>
                <%=link_to "Voir la recette", recipe_path(recipe), class:"recipe-link btn btn-outline-primary px-3" %>
                <%if user_signed_in?%>
                  <%=link_to "Ajouter à mon penu", menu_recipes_path, controller: "menu_recipes", action: "create", class:"recipe-link btn btn-outline-primary px-3" %>
                <%end%>
              </div>
            </div>
          </div>
          <hr class="my-4">
        <% end %>
      </div>
    </div>
  </div>
</div>






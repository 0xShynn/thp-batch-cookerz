<div class="container p-5">
  <h2>Les recettes</h2>
  <div class="row">
    <div class="col-sm-9">
      <%@recipes.each do |recipe|%>
        <div class="row mb-4">
          <div class="col-8 col-sm-5">
            <img class="img-fluid mh-100" src="https://cdn-image.foodandwine.com/sites/default/files/1483039291/chickpeas-and-kale-in-spicy-pomodoro-sauce-XL-RECIPE0217.jpg" alt="Card image cap">          
          </div>
          <div class="col-4 col-sm-7">
            <div class="card-body">
              <h5 class="card-title"><%=recipe.name%></h5>
              <p class="card-text"><%=recipe.description%></p>
              <a href="#" ><button class="btn btn-primary">Selectionner</button></a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-3 bg-light rounded border">lol</div>
  </div>
</div>